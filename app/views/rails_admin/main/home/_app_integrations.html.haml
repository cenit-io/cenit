%section#integrations.white-back
  #showcase
    .container
      .header
        .col-md-12.text-center
          %h3
            = 'App Integrations'
          %p.text-center
            ='All popular apps for Marketplaces, Storefronts, ERP, CRM, Marketing, Webforms, Payments and more'
      .row.gallery_container.add-clearfix
        -home_integrations.each do |name|
          .col-md-2.col-sm-3.col-sms-3.col-xs-6
            = icon_to_app name
      .row.see-all
        = link_to 'See all Apps', '/cross_shared_collection', target: '_blank'