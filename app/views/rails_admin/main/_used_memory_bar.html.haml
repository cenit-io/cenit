- percent = value > 0 ? (max <= 1 ? value : ((Math.log(value+1) * 100.0) / Math.log(max+1)).to_i) : -1
.progress{style: "margin-bottom:0px", class: "false progress-#{indicator = get_indicator(percent)}"  }
  .animate-width-to.progress-bar{class: "progress-bar-#{indicator}", :'data-animate-length' => ([1.0, percent].max.to_i * 20), :'data-animate-width-to' => "#{[2.0, percent].max.to_i}%", style: "width:2%"}
    = number_to_human_size(value)
