CENIT_E2E_BUILD_STACK="${CENIT_E2E_BUILD_STACK:-1}" \
CENIT_E2E_CLEANUP="${CENIT_E2E_CLEANUP:-0}" \
CENIT_E2E_HEADED=0 \
scripts/e2e/cenit_ui_contact_flow.sh
